@model TechSupportWeb.Models.Issues.DetailsModel

@{
    ViewBag.Title = "Сведения о запросе";
}

<h5 class="m-4">Сведения о запросе</h5>

<form>
    <div class="form-group row">
        @Html.LabelFor(model => model.ID, new { @class = "col-form-label col-md-2" })
        @Html.TextBoxFor(model => model.ID, new { @readonly = "readonly", @class = "col-md-2" })
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Text, new { @class = "col-form-label col-md-2" })
        @Html.TextBoxFor(model => model.Text, new { @readonly = "readonly", @class = "col-md-2" })
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.CreatedAt, new { @class = "col-form-label col-md-2" })
        @Html.EditorFor(model => model.CreatedAt, new { htmlAttributes = new { @readonly = "readonly", @class = "col-md-2" } })
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Duration, new { @class = "col-form-label col-md-2" })
        @Html.TextBoxFor(model => model.Duration, new { @readonly = "readonly", @class = "col-md-2" })
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.CanceledAt, new { @class = "col-form-label col-md-2" })
        @Html.EditorFor(model => model.CanceledAt, new { htmlAttributes = new { @readonly = "readonly", @class = "col-md-2" } })
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.AssignedAt, new { @class = "col-form-label col-md-2" })
        @Html.EditorFor(model => model.AssignedAt, new { htmlAttributes = new { @readonly = "readonly", @class = "col-md-2" } })
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.TimeOfWaiting, new { @class = "col-form-label col-md-2" })
        @Html.EditorFor(model => model.TimeOfWaiting, new { htmlAttributes = new { @readonly = "readonly", @class = "col-md-2" } })
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.WorkerName, new { @class = "col-form-label col-md-2" })
        @if (Model.WorkerId != null)
        {
            @Html.ActionLink(Model.WorkerName, "Details", "Workers", new { id = Model.WorkerId }, new { @class = "btn btn-link" })
        }
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.CompletedAt, new { @class = "col-form-label col-md-2" })
        @Html.EditorFor(model => model.CompletedAt, new { htmlAttributes = new { @readonly = "readonly", @class = "col-md-2" } })
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.TimeOfProcess, new { @class = "col-form-label col-md-2" })
        @Html.EditorFor(model => model.TimeOfProcess, new { htmlAttributes = new { @readonly = "readonly", @class = "col-md-2" } })
    </div>

</form>
